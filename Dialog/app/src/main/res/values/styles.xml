<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GameMasterDialogBtnStyle">
        <item name="android:layout_width">@dimen/game_master_dialog_btn_width</item>
        <item name="android:layout_height">@dimen/game_master_dialog_btn_height</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/game_master_dialog_btn_text_size</item>
    </style>
    <style name="GameMasterCommonDialog" parent="android:style/Theme.Dialog">
        <item name="android:background">@color/game_master_dialog_theme_bg</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
